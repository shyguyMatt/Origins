{
    "type": "origins:multiple",
    "initialize": {
        "type": "origins:action_on_callback",
        "entity_action_gained": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "tag @s add dynlightMedium"
                }
            ]
        }
    },
    "no_fall": {
        "type": "origins:modify_falling",
        "velocity": 0.0
    },
    "particles": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:spawn_particles",
            "particle": "minecraft:soul_fire_flame",
            "count": 6,
            "speed": 0.0,
            "force": false,
            "spread": {
                "x": 0.5,
                "y": 0.3,
                "z": 0.5
            },
            "offset_y": 1
        },
        "interval": 5
    },
    "time": {
        "type": "origins:resource",
        "min": 0,
        "max": 10,
        "max_action": {
            "type": "origins:execute_command",
            "command": "kill @s"
        },
        "hud_render": {
            "should_render": false
        }
    },
    "timer": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "kitsune:spirit_fire_time",
            "change": 1
        },
        "interval": 20
    },
    "toggle": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "hud_render": {
            "should_render": false
        }
    },
    "tracking": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "tp @s ~ ~ ~ facing entity @e[type=#kitsune:hostile_mobs,distance=..15,sort=nearest,limit=1]"
                },
                {
                    "type": "origins:add_velocity",
                    "z": 0.6,
                    "space": "local"
                }
            ]
        },
        "interval": 20,
        "condition": {
            "type": "origins:resource",
            "resource": "kitsune:spirit_fire_toggle",
            "comparison": "==",
            "compare_to": 1
        }
    },
    "explosions": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:area_of_effect",
            "radius": 2,
            "bientity_action": {
                "type": "origins:target_action",
                "action": {
                    "type": "origins:and",
                    "actions": [
                        {
                            "type": "origins:grant_power",
                            "power": "kitsune:detonate",
                            "source": "kitsune:spirit_fire"
                        }
                    ]
                }
            },
            "bientity_condition": {
                "type": "origins:target_condition",
                "condition": {
                    "type": "origins:and",
                    "conditions": [
                        {
                            "type": "origins:in_tag",
                            "tag": "kitsune:hostile_mobs"
                        },
                        {
                            "type": "origins:living"
                        }
                    ]
                }
            }
        },
        "interval": 10
    },
    "detonate": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "start_value": 1,
        "min_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:area_of_effect",
                    "radius": 3,
                    "bientity_action": {
                        "type": "origins:target_action",
                        "action": {
                            "type": "origins:and",
                            "actions": [
                                {
                                    "type": "origins:grant_power",
                                    "power": "kitsune:damage_over_time_1",
                                    "source": "kitsune:spirit_fire"                                    
                                },
                                {
                                    "type": "origins:damage",
                                    "amount": 3.5,
                                    "source": {
                                        "name": "explosion",
                                        "fire": true,
                                        "bypasses_armor": false
                                    }
                                }
                            ]

                        }   
                    },
                    "bientity_condition": {
                        "type": "origins:target_condition",
                        "condition": {
                            "type": "origins:and",
                            "conditions": [
                                {
                                    "type": "origins:in_tag",
                                    "tag": "kitsune:hostile_mobs"
                                },
                                {
                                    "type": "origins:living"
                                }
                            ]
                        }
                    }
                },
                {
                    "type": "origins:execute_command",
                    "command": "kill @s"                    
                },
                {
                    "type": "origins:execute_command",
                    "command": "particle minecraft:soul_fire_flame ~ ~ ~ 0.5 0 0.5 0.2 5 force",
                    "permission_level": 4
                },
                {
                    "type": "origins:execute_command",
                    "command": "playsound minecraft:block.fire.extinguish player @a[distance=..30] ~ ~ ~ 1 1 1",
                    "permission_level": 4
                }
            ]
        },
        "hud_render": {
            "should_render": false
        }
    }
}